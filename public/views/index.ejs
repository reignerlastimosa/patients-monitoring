<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel ="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>Document</title>
</head>
<body class="d-flex">
   
    <nav class="d-flex flex-column align-items-center">
        <h1 class="m-5">MedT</h1>
        <div class="list-group mt-5" id="lists">
            <a href="/home" class="list-group-item list-group-item-action active" aria-current="true">
              Home
            </a>
            <a href="/add" class="list-group-item list-group-item-action">Add Patient</a>
            <a href="/edit" class="list-group-item list-group-item-action">Edit Patient</a>
            <a href="/delete" class="list-group-item list-group-item-action">Delete Patient</a>
            <a href="/login" class="list-group-item list-group-item-action">Sign Out</a>
          </div>
    </nav>
      
    <section id="main">


        <div class="container">
        <div id="home">
        <h1 class ="m-3"> HOME</h1>
        </div>
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Occupation</th>
                <th scope="col">Address</th>
                <th scope="col">Sex</th>
                <th scope="col">Age</th>
              </tr>
            </thead>
            <tbody>
             <% patients.forEach((patient) => {
              %>
              <tr>
                <th scope="row"> <%= patient.id %></th>
                <td> <%= patient.firstname %></td>
                <td> <%= patient.lastname %></td>
                <td> <%= patient.occupation %></td>
                <td> <%= patient.address %></td>
                <td> <%= patient.sex %></td>
                <td> <%= patient.age %></td>
              </tr>
             <%}) %>
              
              
            </tbody>
          </table>
    </section>
</div>

    <script src="script.js"> </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>